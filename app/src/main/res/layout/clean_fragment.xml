<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="@drawable/ic_launcher_background"

        android:layout_above="@+id/others"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_toStartOf="@id/center_marigin"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view_hba"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="20sp"
            android:background="@drawable/gradient"
            android:clickable="true"
            android:focusable="true"
            android:layout_margin="10sp"
           >



            <RelativeLayout
                android:background="@drawable/gradient"

                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <androidx.cardview.widget.CardView
                    android:layout_above="@+id/hba_text"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/card_view2_left_mid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    card_view:cardCornerRadius="70sp"
                    android:elevation="30sp"
                    android:background="@drawable/gradient"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_margin="10sp">

                    <ImageView
                        android:id="@+id/image_hba"
                        android:scaleType="fitXY"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_launcher_background"
                        android:contentDescription="TODO" />




                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/hba_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="monospace"
                    android:gravity="center"
                    android:text="Hyaluronan Binding Assay"
                    android:textColor="@android:color/white"

                    android:textSize="14sp"
                    android:textStyle="bold" />


            </RelativeLayout>
        </androidx.cardview.widget.CardView>


        <Space
            android:layout_margin="10sp"
            android:id="@+id/center_marigin"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

        <androidx.cardview.widget.CardView
            android:layout_toEndOf="@id/center_marigin"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view2_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="20sp"
            android:background="@drawable/gradient"

            android:layout_margin="10sp">



            <RelativeLayout
                android:background="@drawable/gradient"

                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


        <androidx.cardview.widget.CardView
            android:layout_above="@+id/dna_text"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="70sp"
            android:elevation="30sp"
            android:background="@drawable/gradient"

            android:layout_margin="10sp">

            <ImageView
                android:id="@+id/image_dna"
                android:scaleType="fitXY"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_launcher_background"
                android:contentDescription="TODO" />




        </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/dna_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="monospace"
                    android:gravity="center"
                    android:text="DNA Fragmentation Assay"
                    android:textColor="@android:color/white"

                    android:textSize="14sp"
                    android:textStyle="bold" />


            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/others"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@android:color/white"
        android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:gravity="center"

        android:orientation="horizontal"
        android:baselineAligned="false">

        <LinearLayout
            android:id="@+id/samples"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_files"
                android:contentDescription="TODO" />

            <edu.harvard.bwh.shafieelab.embryoimaging.customfonts.MyTextView_Roboto_Regular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:text="Sample History"
                android:textColor="@android:color/black"
                android:textSize="13dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/camera"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_cam"
                android:contentDescription="TODO" />

            <edu.harvard.bwh.shafieelab.embryoimaging.customfonts.MyTextView_Roboto_Regular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:text="Open Camera"
                android:textColor="@android:color/black"
                android:textSize="13dp" />
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:gravity="center"

        android:orientation="horizontal"
        android:baselineAligned="false">

        <LinearLayout
            android:id="@+id/results"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_history"/>

            <edu.harvard.bwh.shafieelab.embryoimaging.customfonts.MyTextView_Roboto_Regular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:text="Results"
                android:textColor="@android:color/black"
                android:textSize="13dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/about"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_about"
                android:contentDescription="TODO" />

            <edu.harvard.bwh.shafieelab.embryoimaging.customfonts.MyTextView_Roboto_Regular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:text="About"
                android:textColor="@android:color/black"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>

    </LinearLayout>

</RelativeLayout>