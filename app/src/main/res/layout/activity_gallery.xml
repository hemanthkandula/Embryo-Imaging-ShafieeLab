<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/photo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:transitionName="@string/gallery_photo_hero" />

    <edu.harvard.bwh.shafieelab.embryoimaging.samples.ui.LockableViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <FrameLayout
        android:id="@+id/info_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="@integer/info_container_initial_alpha"
        android:visibility="gone" />

    <edu.harvard.bwh.shafieelab.embryoimaging.samples.ui.FloatingActionButton
        android:id="@+id/star"
        android:layout_width="@dimen/fab_size"
        android:layout_height="@dimen/fab_size"
        android:layout_gravity="end"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:alpha="0"
        android:background="@drawable/info_background"
        android:elevation="@dimen/button_elevation"
        android:src="@drawable/ic_fab_star"
        android:stateListAnimator="@anim/button_raise" />

</merge>